<%= form_with model: Note.new, html: { autocomplete: "off" }, data: { "note-target": "form"} do |form| %>
  <div class="form_container">
    <div class="code_content">
        <div class="note_content UI_Label_Regular_black" style="margin-bottom: 0px;">
  <%= form.text_field :comment, class: "invisible-form" %> <!-- DO NOT CHANGE INDENTATION HERE. Should on first indentation-->
        </div>

      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.hidden_field :category_id, value: params[:id] %>

      <div>
    <%= form.text_field :code, class: "white-box", placeholder: "Enter code", data: {action: "blur->note#send"} %>  <!-- DO NOT CHANGE INDENTATION HERE. Should on first indentation-->
    <%# <%= form.text_field :code, class: "white-box" %> <!-- DO NOT CHANGE INDENTATION HERE. Should on first indentation-->
      </div>

      <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="cat-files">
          <%= form.text_field :file_name, class: "cat-files", style: "border: none;", placeholder: "File Path (Optional)"%>
        </div>
        <div class="UI_Label_Regular_grey_small">
          <%= form.text_field :language,
              class: "UI_Label_Regular_grey_small",
              style: "border: none; background-color: transparent; text-align: right;",
              placeholder: "Language"
              %>
          <%# note.language.capitalize %>
        </div>
      </div>
    </div>
  </div>
<% end %>
