<%= form_with model: @note, url: upload_path, multipart: true do |form| %>
  <%= form.label :language, "Programming Language" %>
  <%= form.text_field :language %>
  <%= form.fields_for :categories, @note.categories do |cat_form|  %>
  <br>
  <strong>Categories:</strong>
    <% @categories.each do |category| %>
      <br>
      <%= cat_form.check_box :name, { multiple: true }, category.name, false %>
      <%= cat_form.label :name, category.name %>
    <% end %>
  <% end %>
  <br>
  <%= link_to "Create New Category", new_category_path %>
  <br>
  <br>

  <%= file_field_tag :source_code %>
  <%= form.submit "Upload" %>
<% end %>
