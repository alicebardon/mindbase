<div data-controller="note-edit">
  <div class="code_content">
    <% if note.comment != "" %>
      <div contenteditable class="note_content UI_Label_Regular_black" data-note-edit-target="comment" data-action="blur->note-edit#update_comment" data-note-id="<%= note.id %>">
        <%= note.comment %>
      </div>
    <%end%>
    <% if note.code.gsub(/\s+/, "") != "" %>
      <pre class="highlight-margin">
        <code contenteditable class= "<%= note.language %> px-3 py-4" data-note-edit-target="code" data-action="focusout->note-edit#update_code" data-note-id="<%= note.id %>"> <%= note.code %></code>
      </pre>
      <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="cat-files">
          <%= note.file_name %>
        </div>
        <div class="UI_Label_Regular_grey_small">
          <%= note.language.capitalize %>
        </div>
      </div>
    <% end %>
  </div>
</div>
